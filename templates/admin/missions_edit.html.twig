{% extends 'base.html.twig' %}

{% block title %}Modifier Mission - Admin{% endblock %}

{% block content %}
<div class="container py-4">
    {# Navigation #}
    {% if navigation %}
    <nav style="display: flex; gap: 16px; margin-bottom: 24px; border-bottom: 1px solid #e5e7eb; padding-bottom: 16px;">
        {% for item in navigation %}
        <a href="{{ item.path }}" 
           style="padding: 8px 16px; text-decoration: none; border-radius: 6px; {% if app.request.pathinfo starts with '/admin/missions' and item.name == 'Missions' %}background-color: #f0f4ff; color: #2563eb; font-weight: 600;{% else %}color: #6b7280;{% endif %} transition: all 0.3s;">
            <span style="margin-right: 4px;">{{ item.icon }}</span>{{ item.name }}
        </a>
        {% endfor %}
    </nav>
    {% endif %}

    <div class="row mb-4">
        <div class="col-auto">
            <a href="{{ path('admin_missions_show', {id: mission.id}) }}" class="btn btn-secondary">‚Üê Retour</a>
        </div>
        <div class="col">
            <h1>‚úèÔ∏è Modifier Mission</h1>
            <p class="text-muted">Mission #{{ mission.id }}</p>
        </div>
    </div>

    {# Messages Flash #}
    {% if app.flashes %}
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type === 'success' ? 'success' : 'danger' }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form method="post" action="{{ path('admin_missions_edit', {id: mission.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('edit-mission-' ~ mission.id) }}">

                        <div class="mb-3">
                            <label for="statut" class="form-label">Statut</label>
                            <select name="statut" id="statut" class="form-select">
                                <option value="EN_COURS" {{ mission.statut === 'EN_COURS' ? 'selected' : '' }}>En cours</option>
                                <option value="ACCEPT√âE" {{ mission.statut === 'ACCEPT√âE' ? 'selected' : '' }}>Accept√©e</option>
                                <option value="TERMIN√âE" {{ mission.statut === 'TERMIN√âE' ? 'selected' : '' }}>Termin√©e</option>
                                <option value="ANNUL√âE" {{ mission.statut === 'ANNUL√âE' ? 'selected' : '' }}>Annul√©e</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="dateFin" class="form-label">Date Fin</label>
                            <input type="datetime-local" name="dateFin" id="dateFin" class="form-control" 
                                   value="{{ mission.dateFin ? mission.dateFin|date('Y-m-d\\TH:i') : '' }}">
                        </div>

                        <div class="alert alert-info">
                            <strong>‚ÑπÔ∏è Info:</strong> Vous pouvez modifier le statut et la date de fin. Les autres informations sont g√©r√©es par les workflows m√©tier.
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">üíæ Enregistrer</button>
                            <a href="{{ path('admin_missions_show', {id: mission.id}) }}" class="btn btn-secondary">Annuler</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">üìã Infos Actuelles</h5>
                </div>
                <div class="card-body">
                    <p><strong>Demande:</strong> {{ mission.demande.titreD }}</p>
                    <p><strong>Aide:</strong> {{ mission.aide ? (mission.aide.nom ~ ' ' ~ mission.aide.prenom) : 'N/A' }}</p>
                    <p><strong>Date D√©but:</strong> {{ mission.dateDebut|date('d/m/Y') }}</p>
                    <p><strong>Status Actuel:</strong> <span class="badge bg-warning">{{ mission.statut }}</span></p>
                </div>
            </div>

            {% if mission.demande %}
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">üìã Demande Li√©e</h5>
                    </div>
                    <div class="card-body">
                        <a href="{{ path('admin_demandes_show', {id: mission.demande.id}) }}" class="btn btn-sm btn-link">
                            Voir demande compl√®te ‚Üí
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
