{% extends 'base.html.twig' %}

{% block title %}Ordonnances{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/medecin/dashboard.css') }}">
{% endblock %}

{% block body %}
<div class="portal">

	{% include 'side_bar.html.twig' %}

	<main class="portal__main">

		<header class="portal__header">
			<h1 class="portal__title">Ordonnances</h1>
			<p class="portal__subtitle">All prescriptions created in the system.</p>
		</header>

		<section class="portal__content">
			<div class="portal__card">
				{% if ordonnances is empty %}
					<p>No ordonnances found.</p>
				{% else %}
					<div class="list">
						{% for o in ordonnances %}
							<div class="rowItem">
								<div>
									<div class="rowItem__title">{{ o.medicament }} — {{ o.dosage }}</div>
									<div class="rowItem__meta">Duration: {{ o.duree }} · Created: {{ o.createdAt ? o.createdAt|date('Y-m-d') : '—' }}</div>
								</div>
								<div>
									<a href="{{ path('Ordonnance_show', {'id': o.id}) }}" class="btn btn--ghost">View</a>
									<a href="{{ path('Ordonnance_edit', {'id': o.id}) }}" class="btn btn--primary">Edit</a>
								</div>
							</div>
						{% endfor %}
					</div>
				{% endif %}
			</div>
		</section>

	</main>

</div>
{% endblock %}
