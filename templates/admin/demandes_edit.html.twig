{% extends 'base.html.twig' %}

{% block title %}Modifier Demande - Admin{% endblock %}

{% block content %}
<div class="container py-4">
    {# Navigation #}
    {% if navigation %}
    <nav style="display: flex; gap: 16px; margin-bottom: 24px; border-bottom: 1px solid #e5e7eb; padding-bottom: 16px;">
        {% for item in navigation %}
        <a href="{{ item.path }}" 
           style="padding: 8px 16px; text-decoration: none; border-radius: 6px; {% if app.request.pathinfo starts with '/admin/demandes' and item.name == 'Demandes' %}background-color: #f0f4ff; color: #2563eb; font-weight: 600;{% else %}color: #6b7280;{% endif %} transition: all 0.3s;">
            <span style="margin-right: 4px;">{{ item.icon }}</span>{{ item.name }}
        </a>
        {% endfor %}
    </nav>
    {% endif %}

    <div class="row mb-4">
        <div class="col-auto">
            <a href="{{ path('admin_demandes_show', {id: demande.id}) }}" class="btn btn-secondary">‚Üê Retour</a>
        </div>
        <div class="col">
            <h1>‚úèÔ∏è Modifier Demande</h1>
            <p class="text-muted">{{ demande.titreD }}</p>
        </div>
    </div>

    {# Messages Flash #}
    {% if app.flashes %}
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ type === 'success' ? 'success' : 'danger' }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form method="post" action="{{ path('admin_demandes_edit', {id: demande.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('edit-demande-' ~ demande.id) }}">

                        <div class="mb-3">
                            <label for="statut" class="form-label">Statut</label>
                            <select name="statut" id="statut" class="form-select">
                                <option value="EN_ATTENTE" {{ demande.statut === 'EN_ATTENTE' ? 'selected' : '' }}>En attente</option>
                                <option value="ACCEPT√âE" {{ demande.statut === 'ACCEPT√âE' ? 'selected' : '' }}>Accept√©e</option>
                                <option value="A_REASSIGNER" {{ demande.statut === 'A_REASSIGNER' ? 'selected' : '' }}>√Ä r√©assigner</option>
                                <option value="EXPIR√âE" {{ demande.statut === 'EXPIR√âE' ? 'selected' : '' }}>Expir√©e</option>
                                <option value="ANNUL√âE" {{ demande.statut === 'ANNUL√âE' ? 'selected' : '' }}>Annul√©e</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="dateFinSouhaitee" class="form-label">Date Fin Souhait√©e</label>
                            <input type="date" name="dateFinSouhaitee" id="dateFinSouhaitee" class="form-control" 
                                   value="{{ demande.dateFinSouhaitee ? demande.dateFinSouhaitee|date('Y-m-d') : '' }}">
                        </div>

                        <div class="alert alert-info">
                            <strong>‚ÑπÔ∏è Info:</strong> Vous pouvez modifier le statut et la date de fin souhait√©e. Les autres informations sont en lecture seule.
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">üíæ Enregistrer</button>
                            <a href="{{ path('admin_demandes_show', {id: demande.id}) }}" class="btn btn-secondary">Annuler</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">üìã Infos Actuelles</h5>
                </div>
                <div class="card-body">
                    <p><strong>Email:</strong> {{ demande.email }}</p>
                    <p><strong>Titre:</strong> {{ demande.titreD }}</p>
                    <p><strong>Date Cr√©ation:</strong> {{ demande.dateCreation|date('d/m/Y') }}</p>
                    <p><strong>Date D√©but:</strong> {{ demande.dateDebutSouhaitee|date('d/m/Y') }}</p>
                    <p><strong>Budget:</strong> {{ demande.budgetMax }} DT</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
