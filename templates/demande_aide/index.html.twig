{% extends 'base.html.twig' %}

{% block title %}Mes demandes d'aide{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/medecin/dashboard.css') }}">
    <style>
        .cards__grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 32px;
            padding: 0;
        }
        
        @media (max-width: 1200px) {
            .cards__grid {
                grid-template-columns: 1fr;
                gap: 24px;
            }
        }
        
        .card {
            position: relative;
            padding: 24px;
            background: white;
            border-radius: 12px;
            border: 1px solid #eee;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
        }
        
        .card:hover {
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
            transform: translateY(-2px);
        }
        
        .card h3 {
            margin: 0 0 12px 0;
            font-size: 18px;
            color: #333;
            font-weight: 600;
        }
        
        .card p {
            margin: 12px 0;
            color: #666;
            line-height: 1.6;
            flex-grow: 1;
        }
        
        .card__actions {
            display: flex;
            gap: 12px;
            margin-top: auto;
            padding-top: 16px;
        }
        
        .card__actions button,
        .card__actions a {
            flex: 1;
            padding: 12px 16px;
            font-size: 14px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            text-align: center;
        }
        
        .btn--info {
            background: #B3E5FC;
            color: #01579B;
            border: none;
        }

        .btn--info:hover {
            background: #81D4FA;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(3, 155, 229, 0.2);
        }

        .btn--edit {
            background: #B2DFDB;
            color: #00695C;
            border: none;
        }

        .btn--edit:hover {
            background: #80DEEA;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 150, 136, 0.2);
        }

        .btn--danger {
            background: #FFCCCC;
            color: #C62828;
            border: none;
        }

        .btn--danger:hover {
            background: #FFADAD;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(198, 40, 40, 0.2);
        }
        
        .card__status {
            display: inline-block;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            margin-top: 12px;
        }
        
        .status--urgent {
            background: #FFE0B2;
            color: #E65100;
            border: 1px solid rgba(230, 81, 0, 0.15);
        }
        
        .status--normal {
            background: #C8E6C9;
            color: #1B5E20;
            border: 1px solid rgba(27, 94, 32, 0.15);
        }
        
        .status--economie {
            background: #E1BEE7;
            color: #6A1B9A;
            border: 1px solid rgba(106, 27, 154, 0.15);
        }
        
        .status--en_attente {
            background: #FFF9C4;
            color: #F57F17;
            border: 1px solid rgba(245, 127, 23, 0.15);
        }
        
        .status--accepted {
            background: #C8E6C9;
            color: #2E7D32;
            border: 1px solid rgba(46, 125, 50, 0.15);
        }

        .status--refused {
            background: #FFCCCC;
            color: #D32F2F;
            border: 1px solid rgba(211, 47, 47, 0.15);
        }
        
        .card__info {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 12px;
            margin-top: 12px;
            padding-top: 12px;
            border-top: 1px solid #eee;
            font-size: 13px;
            color: #666;
        }
        
        .card__info strong {
            color: #333;
        }
    </style>
{% endblock %}

{% block body %}

{% set navigation = [
    {'name': 'Dashboard', 'path': path('app_patient_dashboard'), 'icon': 'üè†'},
    {'name': 'Consultations', 'path': path('patient_consultations'), 'icon': 'ü©∫'},
    {'name': 'Nouvelle consultation', 'path': path('consultation_new'), 'icon': '‚ûï'},
    {'name': 'Demandes', 'path': path('app_demandes_index'), 'icon': 'üìù'},
    {'name': 'Produits', 'path': path('produit_list'), 'icon': 'üõí'},
    {'name': 'Mes commandes', 'path': path('commande_index'), 'icon': 'üìã'}
] %}

<div class="portal">
    {% include 'side_bar.html.twig' %}

    <main class="portal__main">
        <div class="portal__top">
            <div>
                <h1 class="portal__title">Mes demandes d'aide</h1>
                <p class="portal__subtitle">Consultez et g√©rez toutes vos demandes d'aide</p>
            </div>
            <a href="{{ path('app_demande_aide') }}" class="btn btn--primary">+ Cr√©er une demande</a>
        </div>

        <!-- Search and Sort Form -->
        <div class="portal__filters" style="margin-bottom: 24px; display: flex; gap: 16px; align-items: center; flex-wrap: wrap;">
            <form method="GET" id="searchForm" style="display: flex; gap: 12px; align-items: center; flex: 1;">
                <div style="flex: 1; max-width: 400px;">
                    <input type="text" name="search" value="{{ search }}" id="searchInput" placeholder="Rechercher par description, type..." class="form-control" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px; font-size: 14px;">
                </div>
                <select name="sort_by" id="sortBySelect" class="form-control" style="padding: 10px; border: 1px solid #ddd; border-radius: 6px; font-size: 14px;">
                    <option value="dateCreation" {{ sort_by == 'dateCreation' ? 'selected' : '' }}>Trier par date</option>
                    <option value="typeDemande" {{ sort_by == 'typeDemande' ? 'selected' : '' }}>Trier par type</option>
                    <option value="statut" {{ sort_by == 'statut' ? 'selected' : '' }}>Trier par statut</option>
                    <option value="budgetMax" {{ sort_by == 'budgetMax' ? 'selected' : '' }}>Trier par budget</option>
                </select>
                <select name="sort_order" class="form-control" style="padding: 10px; border: 1px solid #ddd; border-radius: 6px; font-size: 14px;">
                    <option value="desc" {{ sort_order == 'desc' ? 'selected' : '' }}>D√©croissant</option>
                    <option value="asc" {{ sort_order == 'asc' ? 'selected' : '' }}>Croissant</option>
                </select>
                <button type="submit" class="btn btn--primary" style="padding: 10px 16px;">Rechercher</button>
                <a href="{{ path('app_demandes_index') }}" class="btn btn--secondary" style="padding: 10px 16px; background: #6c757d; color: white; text-decoration: none;">R√©initialiser</a>
            </form>
        </div>

        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const sortBySelect = document.getElementById('sortBySelect');
                const searchInput = document.getElementById('searchInput');
                const searchForm = document.getElementById('searchForm');

                function updatePlaceholder() {
                    const selectedValue = sortBySelect.value;
                    switch(selectedValue) {
                        case 'dateCreation':
                            searchInput.placeholder = 'Rechercher par date (YYYY-MM-DD ou DD/MM/YYYY)';
                            searchInput.type = 'text';
                            searchInput.pattern = '\\d{4}-\\d{2}-\\d{2}|\\d{2}/\\d{2}/\\d{4}';
                            break;
                        case 'budgetMax':
                            searchInput.placeholder = 'Rechercher par budget (nombre entier)';
                            searchInput.type = 'number';
                            searchInput.min = '0';
                            searchInput.step = '1';
                            break;
                        case 'typeDemande':
                            searchInput.placeholder = 'Rechercher par type de demande';
                            searchInput.type = 'text';
                            searchInput.removeAttribute('pattern');
                            searchInput.removeAttribute('min');
                            searchInput.removeAttribute('step');
                            break;
                        case 'statut':
                            searchInput.placeholder = 'Rechercher par statut';
                            searchInput.type = 'text';
                            searchInput.removeAttribute('pattern');
                            searchInput.removeAttribute('min');
                            searchInput.removeAttribute('step');
                            break;
                        default:
                            searchInput.placeholder = 'Rechercher par description, type...';
                            searchInput.type = 'text';
                            searchInput.removeAttribute('pattern');
                            searchInput.removeAttribute('min');
                            searchInput.removeAttribute('step');
                    }
                }

                function validateInput() {
                    const selectedValue = sortBySelect.value;
                    const value = searchInput.value.trim();

                    if (value === '') return true; // Empty is allowed

                    switch(selectedValue) {
                        case 'dateCreation':
                            const dateRegex = /^\d{4}-\d{2}-\d{2}$|^\d{2}\/\d{2}\/\d{4}$/;
                            if (!dateRegex.test(value)) {
                                alert('Format de date invalide. Utilisez YYYY-MM-DD ou DD/MM/YYYY');
                                return false;
                            }
                            break;
                        case 'budgetMax':
                            if (!Number.isInteger(Number(value)) || Number(value) < 0) {
                                alert('Le budget doit √™tre un nombre entier positif');
                                return false;
                            }
                            break;
                    }
                    return true;
                }

                sortBySelect.addEventListener('change', updatePlaceholder);
                searchForm.addEventListener('submit', function(e) {
                    if (!validateInput()) {
                        e.preventDefault();
                        return false;
                    }
                });

                updatePlaceholder(); // Initialize on page load
            });
        </script>

        {% if demandesAide is empty %}
            <div class="box">
                <p style="text-align: center; color: var(--muted);">Vous n'avez aucune demande d'aide pour le moment.</p>
                <p style="text-align: center; margin-top: 16px;">
                    <a href="{{ path('app_demande_aide') }}" class="btn btn--primary">Cr√©er votre premi√®re demande</a>
                </p>
            </div>
        {% else %}
            <div class="cards">
                <div class="cards__grid">
                    {% for demande in demandesAide %}
                        <div class="card">
                            <div style="display: flex; justify-content: space-between; align-items: start; gap: 12px;">
                                <div>
                                    <h3 style="margin: 0 0 12px 0;">#{{ demande.id }}</h3>
                                    <span class="card__status status--{{ demande.typeDemande|lower }}">{{ demande.typeDemande }}</span>
                                </div>
                                <span class="card__status status--{{ demande.statut|lower|replace({'_': '_'}) }}">{{ demande.statut|replace({'_': ' '}) }}</span>
                            </div>

                            <p style="margin: 12px 0; color: #666; line-height: 1.5;">{{ demande.descriptionBesoin|length > 120 ? demande.descriptionBesoin|slice(0, 120) ~ '‚Ä¶' : demande.descriptionBesoin }}</p>

                            <div class="card__info">
                                <div>
                                    <strong>Type de patient:</strong><br>{{ demande.typePatient|replace({'_': ' '}) }}
                                </div>
                                <div>
                                    <strong>Budget:</strong><br>{{ demande.budgetMax }} DT
                                </div>
                                <div>
                                    <strong>D√©but souhait√©e:</strong><br>{{ demande.dateDebutSouhaitee ? demande.dateDebutSouhaitee|date('d/m/Y H:i') : 'N/A' }}
                                </div>
                                <div>
                                    <strong>Cr√©√©e:</strong><br>{{ demande.dateCreation ? demande.dateCreation|date('d/m/Y H:i') : 'N/A' }}
                                </div>
                            </div>

                            <div class="card__actions">
                                {% if demande.statut == 'EN_ATTENTE' %}
                                    <a href="{{ path('app_demande_aide_edit', {id: demande.id}) }}" class="btn btn--edit">‚úèÔ∏è Modifier</a>
                                {% endif %}
                                <a href="{{ path('app_demande_aide_show', {id: demande.id}) }}" class="btn btn--info">üëÅÔ∏è Suivre</a>
                                <form method="POST" action="{{ path('app_demande_aide_delete', {id: demande.id}) }}" style="flex: 1;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir annuler cette demande ?');">
                                    <button type="submit" class="btn btn--danger" style="width: 100%;">‚ùå Annuler</button>
                                </form>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Pagination -->
            {% if total_pages > 1 %}
                <div class="pagination" style="margin-top: 32px; display: flex; justify-content: center; gap: 8px;">
                    {% if current_page > 1 %}
                        <a href="{{ path('app_demandes_index', {'page': current_page - 1, 'search': search, 'sort_by': sort_by, 'sort_order': sort_order}) }}" class="btn btn--secondary" style="padding: 8px 12px;">Pr√©c√©dent</a>
                    {% endif %}

                    {% for page_num in range(max(1, current_page - 2), min(total_pages, current_page + 2)) %}
                        {% if page_num == current_page %}
                            <span class="btn btn--primary" style="padding: 8px 12px; background: #007bff;">{{ page_num }}</span>
                        {% else %}
                            <a href="{{ path('app_demandes_index', {'page': page_num, 'search': search, 'sort_by': sort_by, 'sort_order': sort_order}) }}" class="btn btn--secondary" style="padding: 8px 12px;">{{ page_num }}</a>
                        {% endif %}
                    {% endfor %}

                    {% if current_page < total_pages %}
                        <a href="{{ path('app_demandes_index', {'page': current_page + 1, 'search': search, 'sort_by': sort_by, 'sort_order': sort_order}) }}" class="btn btn--secondary" style="padding: 8px 12px;">Suivant</a>
                    {% endif %}
                </div>
            {% endif %}
        {% endif %}
    </main>
</div>
{% endblock %}
