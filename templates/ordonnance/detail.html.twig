{% extends 'base.html.twig' %}

{% block title %}Ordonnance Details{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/medecin/dashboard.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/consultation/form.css') }}">
{% endblock %}

{% block body %}
<div class="portal">
    <aside class="portal__side">
        <a href="#" class="portal__brand">
            <img src="{{ asset('assets/images/logo_mini.png') }}" class="portal__logo" alt="">
            <div>
                <div class="portal__name">Aidora</div>
                <div class="portal__tag">Espace Médecin</div>
            </div>
        </a>
    </aside>

    <main class="portal__main">
        <header class="portal__header">
            <h1 class="portal__title">Ordonnance Details</h1>
            <p class="portal__subtitle">Prescription information</p>
        </header>

        <section class="portal__content portal__card">
            <div class="card" style="display:flex;gap:18px;align-items:flex-start">
                <div style="flex:1">
                    <h3 style="margin:0 0 8px">{{ ordonnance.medicament }} <span style="color:var(--muted);font-weight:700">· {{ ordonnance.dosage }}</span></h3>

                    <div style="display:grid;grid-template-columns:repeat(2,1fr);gap:12px;margin-top:12px">
                        <div>
                            <div class="section-title"><h2 style="font-size:14px;margin:0">Duration</h2></div>
                            <div style="margin-top:6px">{{ ordonnance.duree ?: '—' }}</div>
                        </div>
                        <div>
                            <div class="section-title"><h2 style="font-size:14px;margin:0">Created</h2></div>
                            <div style="margin-top:6px">{{ ordonnance.createdAt ? ordonnance.createdAt|date('Y-m-d') : '—' }}</div>
                        </div>
                    </div>

                    <div style="margin-top:14px">
                        <div class="section-title"><h2 style="font-size:14px;margin:0">Instructions</h2></div>
                        <div style="margin-top:8px;white-space:pre-line">{{ ordonnance.instructions ?: '—' }}</div>
                    </div>
                </div>

                <aside style="width:280px">
                    <div style="background:var(--card);border:1px solid rgba(7,19,31,.06);border-radius:12px;padding:12px">
                        <div style="font-weight:900">Consultation</div>
                        <div style="color:var(--muted);margin-top:6px">
                            {% if ordonnance.consultation %}
                                <div>{{ ordonnance.consultation.name }} {{ ordonnance.consultation.familyName }}</div>
                                <div>{{ ordonnance.consultation.dateConsultation ? ordonnance.consultation.dateConsultation|date('Y-m-d H:i') : '—' }}</div>
                            {% else %}
                                —
                            {% endif %}
                        </div>

                        <div style="margin-top:12px;display:flex;gap:8px;flex-direction:column">
                            <a href="{{ path('Ordonnance_show_all') }}" class="btn btn--ghost">Back</a>
                            <a href="{{ path('Ordonnance_edit', {'id': ordonnance.id}) }}" class="btn btn--primary">Edit</a>
                            <form method="post" action="{{ path('Ordonnance_delete', {'id': ordonnance.id}) }}" onsubmit="return confirm('Delete this ordonnance?')">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ordonnance.id) }}">
                                <button type="submit" class="btn btn--ghost">Delete</button>
                            </form>
                        </div>
                    </div>
                </aside>
            </div>
        </section>
    </main>
</div>
{% endblock %}
