{% extends 'base.html.twig' %}

{% block title %}Mes missions accept√©es{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/medecin/dashboard.css') }}">
    <style>
        .cards__grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 32px;
            padding: 0;
        }
        
        @media (max-width: 1200px) {
            .cards__grid {
                grid-template-columns: 1fr;
                gap: 24px;
            }
        }
        
        .card {
            position: relative;
            padding: 24px;
            background: white;
            border-radius: 12px;
            border: 1px solid #eee;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
        }
        
        .card:hover {
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
            transform: translateY(-2px);
        }
        
        .card h3 {
            margin: 0 0 12px 0;
            font-size: 18px;
            color: #333;
            font-weight: 600;
        }
        
        .card p {
            margin: 12px 0;
            color: #666;
            line-height: 1.6;
            flex-grow: 1;
        }
        
        .card__actions {
            display: flex;
            gap: 12px;
            margin-top: auto;
            padding-top: 16px;
            flex-wrap: wrap;
        }
        
        .card__actions button,
        .card__actions a {
            flex: 1;
            min-width: 100px;
            padding: 12px 16px;
            font-size: 14px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            text-align: center;
        }
        
        .btn--info {
            background: #B3E5FC;
            color: #01579B;
            border: none;
        }

        .btn--info:hover {
            background: #81D4FA;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(3, 155, 229, 0.2);
        }

        .btn--danger {
            background: #FFCCCC;
            color: #C62828;
            border: none;
        }

        .btn--danger:hover {
            background: #FFADAD;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(198, 40, 40, 0.2);
        }
        
        .card__status {
            display: inline-block;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            margin-top: 12px;
        }
        
        .status--urgent {
            background: #FFE0B2;
            color: #E65100;
            border: 1px solid rgba(230, 81, 0, 0.15);
        }
        
        .status--normal {
            background: #C8E6C9;
            color: #1B5E20;
            border: 1px solid rgba(27, 94, 32, 0.15);
        }
        
        .status--economie {
            background: #E1BEE7;
            color: #6A1B9A;
            border: 1px solid rgba(106, 27, 154, 0.15);
        }
        
        .status--accepted {
            background: #C8E6C9;
            color: #2E7D32;
            border: 1px solid rgba(46, 125, 50, 0.15);
        }
        
        .card__info {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 12px;
            margin-top: 12px;
            padding-top: 12px;
            border-top: 1px solid #eee;
            font-size: 13px;
            color: #666;
        }
        
        .card__info strong {
            color: #333;
        }
    </style>
{% endblock %}

{% block body %}

{% set navigation = navigation %}

<div class="portal">
    {% include 'side_bar.html.twig' %}

    <main class="portal__main">
        <div class="portal__top">
            <div>
                <h1 class="portal__title">Mes missions accept√©es</h1>
                <p class="portal__subtitle">Consultez et suivez vos missions accept√©es</p>
            </div>
        </div>

        <!-- Navigation Tabs -->
        <div class="portal__tabs" style="margin-bottom: 24px; display: flex; gap: 0; border-bottom: 2px solid #eee;">
            {% for nav in navigation %}
                <a href="{{ nav.path }}" style="padding: 12px 20px; text-decoration: none; color: #666; font-weight: 500; border-bottom: 3px solid transparent; display: flex; align-items: center; gap: 6px;
                    {% if (nav.name == 'Demandes' and app.request.attributes.get('_route') == 'aidesoingnant_demandes')
                         or (nav.name == 'Missions' and app.request.attributes.get('_route') == 'aidesoingnant_missions')
                         or (nav.name == 'Dashboard' and app.request.attributes.get('_route') == 'app_aide_soignant_dashboard')
                         or (nav.name == 'Formation' and app.request.attributes.get('_route') == 'aidesoingnant_formation') %}
                        color: #007bff; border-bottom-color: #007bff;
                    {% endif %}
                    transition: all 0.3s ease;">
                    {{ nav.icon }} {{ nav.name }}
                </a>
            {% endfor %}
        </div>

        <!-- Search and Sort Form -->
        <div class="portal__filters" style="margin-bottom: 24px; display: flex; gap: 16px; align-items: center; flex-wrap: wrap;">
            <form method="GET" id="searchForm" style="display: flex; gap: 12px; align-items: center; flex: 1;">
                <div style="flex: 1; max-width: 400px;">
                    <input type="text" name="search" value="{{ search }}" id="searchInput" placeholder="Rechercher par description, titre..." class="form-control" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 6px; font-size: 14px;">
                </div>
                <select name="sort_by" id="sortBySelect" class="form-control" style="padding: 10px; border: 1px solid #ddd; border-radius: 6px; font-size: 14px;">
                    <option value="dateCreation" {{ sort_by == 'dateCreation' ? 'selected' : '' }}>Trier par date</option>
                    <option value="typeDemande" {{ sort_by == 'typeDemande' ? 'selected' : '' }}>Trier par type</option>
                    <option value="budgetMax" {{ sort_by == 'budgetMax' ? 'selected' : '' }}>Trier par budget</option>
                </select>
                <select name="sort_order" class="form-control" style="padding: 10px; border: 1px solid #ddd; border-radius: 6px; font-size: 14px;">
                    <option value="desc" {{ sort_order == 'desc' ? 'selected' : '' }}>D√©croissant</option>
                    <option value="asc" {{ sort_order == 'asc' ? 'selected' : '' }}>Croissant</option>
                </select>
                <button type="submit" class="btn btn--primary" style="padding: 10px 16px;">Rechercher</button>
                <a href="{{ path('aidesoingnant_missions') }}" class="btn btn--secondary" style="padding: 10px 16px; background: #6c757d; color: white; text-decoration: none;">R√©initialiser</a>
            </form>
            <a href="{{ path('aidesoingnant_history') }}" class="btn btn--info" style="padding: 10px 16px; background: #17a2b8; color: white; text-decoration: none; border-radius: 6px; font-weight: 600; white-space: nowrap;">üìö Historique</a>
        </div>

        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const sortBySelect = document.getElementById('sortBySelect');
                const searchInput = document.getElementById('searchInput');
                const searchForm = document.getElementById('searchForm');

                function updatePlaceholder() {
                    const selectedValue = sortBySelect.value;
                    switch(selectedValue) {
                        case 'dateCreation':
                            searchInput.placeholder = 'Rechercher par date (YYYY-MM-DD ou DD/MM/YYYY)';
                            searchInput.type = 'text';
                            searchInput.pattern = '\\d{4}-\\d{2}-\\d{2}|\\d{2}/\\d{2}/\\d{4}';
                            break;
                        case 'budgetMax':
                            searchInput.placeholder = 'Rechercher par budget (nombre entier)';
                            searchInput.type = 'number';
                            searchInput.min = '0';
                            searchInput.step = '1';
                            break;
                        case 'typeDemande':
                            searchInput.placeholder = 'Rechercher par type de demande';
                            searchInput.type = 'text';
                            searchInput.removeAttribute('pattern');
                            searchInput.removeAttribute('min');
                            searchInput.removeAttribute('step');
                            break;
                        default:
                            searchInput.placeholder = 'Rechercher par description, titre...';
                            searchInput.type = 'text';
                            searchInput.removeAttribute('pattern');
                            searchInput.removeAttribute('min');
                            searchInput.removeAttribute('step');
                    }
                }

                function validateInput() {
                    const selectedValue = sortBySelect.value;
                    const value = searchInput.value.trim();

                    if (value === '') return true; // Empty is allowed

                    switch(selectedValue) {
                        case 'dateCreation':
                            const dateRegex = /^\d{4}-\d{2}-\d{2}$|^\d{2}\/\d{2}\/\d{4}$/;
                            if (!dateRegex.test(value)) {
                                alert('Format de date invalide. Utilisez YYYY-MM-DD ou DD/MM/YYYY');
                                return false;
                            }
                            break;
                        case 'budgetMax':
                            if (!Number.isInteger(Number(value)) || Number(value) < 0) {
                                alert('Le budget doit √™tre un nombre entier positif');
                                return false;
                            }
                            break;
                    }
                    return true;
                }

                sortBySelect.addEventListener('change', updatePlaceholder);
                searchForm.addEventListener('submit', function(e) {
                    if (!validateInput()) {
                        e.preventDefault();
                        return false;
                    }
                });

                updatePlaceholder(); // Initialize on page load
            });
        </script>

        {% if missions is empty %}
            <div class="box">
                <p style="text-align: center; color: var(--muted);">Aucune mission accept√©e pour le moment.</p>
                <p style="text-align: center; margin-top: 16px;">
                    <a href="{{ path('aidesoingnant_demandes') }}" class="btn btn--primary">Consulter les demandes en attente</a>
                </p>
            </div>
        {% else %}
            <div class="cards">
                <div class="cards__grid">
                    {% for mission in missions %}
                        <div class="card">
                            <div style="display: flex; justify-content: space-between; align-items: start; gap: 12px;">
                                <div style="flex: 1;">
                                    <h3 style="margin: 0 0 12px 0;">{{ mission.demandeAide.titreD }}</h3>
                                    <span class="card__status status--{{ mission.demandeAide.typeDemande|lower }}">{{ mission.demandeAide.typeDemande }}</span>
                                </div>
                                <span class="card__status status--accepted">Accept√©e</span>
                            </div>

                            <p style="margin: 12px 0; color: #666; line-height: 1.5;">{{ mission.demandeAide.descriptionBesoin|length > 120 ? mission.demandeAide.descriptionBesoin|slice(0, 120) ~ '‚Ä¶' : mission.demandeAide.descriptionBesoin }}</p>

                            <div class="card__info">
                                <div>
                                    <strong>Type de patient:</strong><br>{{ mission.demandeAide.typePatient|replace({'_': ' '}) }}
                                </div>
                                <div>
                                    <strong>Budget:</strong><br>{{ mission.demandeAide.budgetMax }} DT
                                </div>
                                <div>
                                    <strong>Prix final:</strong><br>{{ mission.prixFinal ? mission.prixFinal ~ ' DT' : 'Non d√©fini' }}
                                </div>
                                <div>
                                    <strong>Date de d√©but:</strong><br>{{ mission.dateDebut ? mission.dateDebut|date('d/m/Y H:i') : 'N/A' }}
                                </div>
                            </div>

                            <div class="card__actions">
                                <a href="{{ path('aidesoingnant_missions_details', {id: mission.demandeAide.id}) }}" class="btn btn--info">üëÅÔ∏è Voir d√©tails</a>
                                <form method="POST" action="{{ path('aidesoingnant_missions_delete', {id: mission.demandeAide.id}) }}" style="flex: 1;" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette mission ?');">
                                    <button type="submit" class="btn btn--danger" style="width: 100%;">‚ùå Supprimer</button>
                                </form>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Pagination -->
            {% if total_pages > 1 %}
                <div class="pagination" style="margin-top: 32px; display: flex; justify-content: center; gap: 8px;">
                    {% if current_page > 1 %}
                        <a href="{{ path('aidesoingnant_missions', {'page': current_page - 1, 'search': search, 'sort_by': sort_by, 'sort_order': sort_order}) }}" class="btn btn--secondary" style="padding: 8px 12px;">Pr√©c√©dent</a>
                    {% endif %}

                    {% for page_num in range(max(1, current_page - 2), min(total_pages, current_page + 2)) %}
                        {% if page_num == current_page %}
                            <span class="btn btn--primary" style="padding: 8px 12px; background: #007bff;">{{ page_num }}</span>
                        {% else %}
                            <a href="{{ path('aidesoingnant_missions', {'page': page_num, 'search': search, 'sort_by': sort_by, 'sort_order': sort_order}) }}" class="btn btn--secondary" style="padding: 8px 12px;">{{ page_num }}</a>
                        {% endif %}
                    {% endfor %}

                    {% if current_page < total_pages %}
                        <a href="{{ path('aidesoingnant_missions', {'page': current_page + 1, 'search': search, 'sort_by': sort_by, 'sort_order': sort_order}) }}" class="btn btn--secondary" style="padding: 8px 12px;">Suivant</a>
                    {% endif %}
                </div>
            {% endif %}
        {% endif %}
    </main>
</div>
{% endblock %}
