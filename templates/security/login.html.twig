{% extends 'base.html.twig' %}
{% block title %}Connexion{% endblock %}


{% block javascripts %}
    <script src="{{ asset('public/assets/js/controle.js') }}" defer></script>
{% endblock %}

{% block body %}
<div class="bg-orbs"></div>

<div class="container" style="padding:60px 0">
  <div class="card" style="max-width:520px;margin:0 auto;padding:24px">
  <div style="text-align:center;margin-bottom:16px">
  <a href="{{ path('app_home') }}">
    <img 
      src="{{ asset('assets/images/logo_mini.png') }}" 
      alt="Aidora"
      style="height:56px;margin-bottom:8px"
    >
  </a>
</div>

    <h2 style="margin-bottom:8px">Connexion</h2>
    <p style="color:#6b7280;margin-bottom:16px">
      Connectez-vous à votre compte Aidora
    </p>

    {% if app.request.query.get('registered') == 'medecin' %}
      <div class="pill" style="margin-bottom:12px;color:#0369a1;background-color:#ecf7fe;border:1px solid #7dd3fc">
        ✓ Inscription réussie! Votre compte de médecin est en attente de validation par un administrateur.
      </div>
    {% elseif app.request.query.get('registered') == 'aidesoignant' %}
      <div class="pill" style="margin-bottom:12px;color:#0369a1;background-color:#ecf7fe;border:1px solid #7dd3fc">
        ✓ Inscription réussie! Votre compte d'aide-soignant est en attente de validation par un administrateur.
      </div>
    {% endif %}

    {% if app.session.has('validation_error_message') %}
      {% set message = app.session.get('validation_error_message') %}
      {% if 'en attente de validation' in message %}
        <div class="pill" style="margin-bottom:12px;color:#d97706;background-color:#fef3c7;border:1px solid #fcd34d">
          ⏳ {{ message }}
        </div>
      {% else %}
        <div class="pill" style="margin-bottom:12px;color:#dc2626;background-color:#fee2e2;border:1px solid #fca5a5">
          ❌ {{ message }}
        </div>
      {% endif %}
      {% set _ = app.session.remove('validation_error_message') %}
    {% elseif error %}
      <div class="pill" style="margin-bottom:12px;color:#dc2626;background-color:#fee2e2;border:1px solid #fca5a5">
        ❌ Ce compte n'existe pas ou les identifiants sont incorrects.
      </div>
    {% endif %}

    <form method="post">
      <label>Email</label>
      <input type="email" name="_username" value="{{ last_username }}" 
             style="width:100%;padding:12px;border-radius:12px;margin:8px 0 16px">

      <label>Mot de passe</label>
      <input type="password" name="_password"
             style="width:100%;padding:12px;border-radius:12px;margin:8px 0 16px">

      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

      <div style="display:flex;gap:10px">
        <button class="btn btn--primary" type="submit">Connexion</button>
        <a class="btn btn--ghost" href="{{ path('app_register') }}">Inscription</a>
      </div>
    </form>
  </div>
</div>
{% endblock %}
