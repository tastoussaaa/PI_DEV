                    <button type="submit" class="btn-danger">üóëÔ∏è Supprimer</button>
                </form>
            </div>
        </div>
    </main>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/leaflet.min.js"></script>
<script>
    // Initialiser la carte
    const map = L.map('map').setView([{{ demande.latitude }}, {{ demande.longitude }}], 15);
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '¬© OpenStreetMap',
        maxZoom: 19
    }).addTo(map);

    // Ajouter le marker
    L.marker([{{ demande.latitude }}, {{ demande.longitude }}]).addTo(map)
        .bindPopup('<b>{{ demande.lieu ?? 'Demande d\'aide' }}</b>');

    // Price proposal modal functions
    let currentDemandeId = null;
    let maxBudget = 0;

    function openPriceModal(demandeId, budgetMax) {
        currentDemandeId = demandeId;
        maxBudget = budgetMax;

        document.getElementById('proposedPrice').value = budgetMax;
        document.getElementById('proposedPrice').max = budgetMax;
        document.getElementById('priceModal').style.display = 'block';
        document.getElementById('alertContainer').style.display = 'none';

        // Focus on input
        setTimeout(() => {
            document.getElementById('proposedPrice').focus();
        }, 100);
    }

    function closePriceModal() {
        document.getElementById('priceModal').style.display = 'none';
        document.getElementById('priceForm').reset();
        currentDemandeId = null;
        maxBudget = 0;
    }

    document.getElementById('priceForm').addEventListener('submit', function(e) {
        e.preventDefault();

        const proposedPrice = parseFloat(document.getElementById('proposedPrice').value);
        const alertContainer = document.getElementById('alertContainer');

        // Validation
        if (isNaN(proposedPrice) || proposedPrice <= 0) {
            showAlert('Le prix doit √™tre un nombre positif.', 'error');
            return;
        }

        if (proposedPrice >= maxBudget) {
            showAlert('Le prix propos√© doit √™tre inf√©rieur au budget maximum.', 'error');
            return;
        }

        // Send AJAX request
        fetch('/aidesoingnant/missions/propose-price/' + currentDemandeId, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: JSON.stringify({
                proposedPrice: proposedPrice
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                showAlert('Prix propos√© avec succ√®s!', 'success');
                setTimeout(() => {
                    closePriceModal();
                    location.reload(); // Refresh to show updated price
                }, 1500);
            } else {
                showAlert(data.message || 'Erreur lors de la proposition du prix.', 'error');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showAlert('Erreur lors de la communication avec le serveur.', 'error');
        });
    });

    function showAlert(message, type) {
        const alertContainer = document.getElementById('alertContainer');
        alertContainer.textContent = message;
        alertContainer.className = 'alert alert--' + type;
        alertContainer.style.display = 'block';
    }

    // Close modal when clicking outside
    window.onclick = function(event) {
        const modal = document.getElementById('priceModal');
        if (event.target == modal) {
            closePriceModal();
        }
    }
</script>

<!-- Price Proposal Modal -->
<div id="priceModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Proposer un prix</h3>
            <span class="close" onclick="closePriceModal()">&times;</span>
        </div>

        <div id="alertContainer" class="alert" style="display: none;"></div>

        <form id="priceForm">
            <div class="form-group">
                <label for="proposedPrice">Prix propos√© (DT)</label>
                <input type="number" id="proposedPrice" name="proposedPrice" min="0" step="0.01" required>
                <small style="color: #666; font-size: 12px;">Le prix doit √™tre positif et inf√©rieur au budget maximum.</small>
            </div>

            <div class="modal-actions">
                <button type="button" class="btn-modal btn-modal--secondary" onclick="closePriceModal()">Annuler</button>
                <button type="submit" class="btn-modal btn-modal--primary">Proposer</button>
            </div>
        </form>
    </div>
</div>

{% endblock %}
