{% extends 'base.html.twig' %}

{% block title %}Historique des demandes d'aide{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/medecin/dashboard.css') }}">
    <style>
        .history-list {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .history-item {
            background: white;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 16px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 0.3s ease;
            border-left: 4px solid #999;
        }

        .history-item:hover {
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .history-item.completed {
            border-left-color: #4CAF50;
        }

        .history-item.expired {
            border-left-color: #FF9800;
        }

        .history-item.cancelled {
            border-left-color: #f44336;
        }

        .history-info {
            flex: 1;
        }

        .history-title {
            font-weight: 600;
            margin: 0 0 8px 0;
            color: #333;
        }

        .history-meta {
            display: flex;
            gap: 24px;
            font-size: 13px;
            color: #999;
            flex-wrap: wrap;
        }

        .history-status {
            padding: 4px 12px;
            border-radius: 4px;
            font-size: 12px;
            font-weight: 600;
            white-space: nowrap;
        }

        .status-completed {
            background: #C8E6C9;
            color: #2E7D32;
        }

        .status-expired {
            background: #FFE0B2;
            color: #E65100;
        }

        .status-cancelled {
            background: #FFCDD2;
            color: #C62828;
        }

        .pagination {
            display: flex;
            gap: 8px;
            justify-content: center;
            margin-top: 24px;
        }

        .pagination a, .pagination span {
            padding: 8px 12px;
            border: 1px solid #ddd;
            border-radius: 4px;
            text-decoration: none;
            color: #333;
        }

        .pagination a:hover {
            background: #f5f5f5;
        }

        .pagination .current {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
        }

        .empty-state {
            text-align: center;
            padding: 40px;
            color: #999;
        }
    </style>
{% endblock %}

{% block body %}

<div class="portal">
    {% include 'side_bar.html.twig' %}

    <main class="portal__main">
        <div class="portal__top">
            <div>
                <h1 class="portal__title">üìö Historique des demandes</h1>
                <p class="portal__subtitle">Vos demandes d'aide termin√©es, expir√©es ou annul√©es</p>
            </div>
        </div>

        <div class="box">
            {% if demandes|length > 0 %}
                <div class="history-list">
                    {% for demande in demandes %}
                        <div class="history-item {{ demande.statut|lower|replace({'_': ''}) }}">
                            <div class="history-info">
                                <h3 class="history-title">{{ demande.titreD }}</h3>
                                <div class="history-meta">
                                    <span>üìã {{ demande.typeDemande }}</span>
                                    <span>üìÖ {{ demande.dateDebutSouhaitee|date('d/m/Y') }} - {{ demande.dateFinSouhaitee|date('d/m/Y') }}</span>
                                    <span>üí∞ {{ demande.budgetMax }} TND</span>
                                    <span>üìù {{ demande.dateCreation|date('d/m/Y √† H:i') }}</span>
                                </div>
                            </div>
                            {% set statusClass = demande.statut == 'TERMIN√âE' ? 'completed' : (demande.statut == 'EXPIR√âE' ? 'expired' : 'cancelled') %}
                            <span class="history-status status-{{ statusClass }}">
                                {% if demande.statut == 'TERMIN√âE' %}
                                    ‚úì Termin√©e
                                {% elseif demande.statut == 'EXPIR√âE' %}
                                    ‚è∞ Expir√©e
                                {% elseif demande.statut == 'ANNUL√âE' %}
                                    ‚úï Annul√©e
                                {% else %}
                                    {{ demande.statut|replace({'_': ' '}) }}
                                {% endif %}
                            </span>
                        </div>
                    {% endfor %}
                </div>

                {% if total_pages > 1 %}
                    <div class="pagination">
                        {% if current_page > 1 %}
                            <a href="{{ path('app_demandes_history', {page: current_page - 1}) }}">‚Üê Pr√©c√©dent</a>
                        {% endif %}

                        {% for page_num in 1..total_pages %}
                            {% if page_num == current_page %}
                                <span class="current">{{ page_num }}</span>
                            {% else %}
                                <a href="{{ path('app_demandes_history', {page: page_num}) }}">{{ page_num }}</a>
                            {% endif %}
                        {% endfor %}

                        {% if current_page < total_pages %}
                            <a href="{{ path('app_demandes_history', {page: current_page + 1}) }}">Suivant ‚Üí</a>
                        {% endif %}
                    </div>
                {% endif %}
            {% else %}
                <div class="empty-state">
                    <p style="font-size: 18px; margin-bottom: 12px;">üì≠ Aucune demande archiv√©e</p>
                    <p>Vous n'avez pas encore de demandes termin√©es, expir√©es ou annul√©es.</p>
                </div>
            {% endif %}
        </div>
    </main>
</div>

{% endblock %}
