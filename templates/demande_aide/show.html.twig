{% extends 'base.html.twig' %}

{% block title %}D√©tails de la demande d'aide{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/medecin/dashboard.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/leaflet.min.css" />
    <style>
        #map {
            height: 400px;
            border-radius: 8px;
            margin: 16px 0;
            border: 2px solid #ddd;
        }
        
        .details-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 24px;
            margin-bottom: 24px;
        }
        
        .detail-section {
            background: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
            border-left: 4px solid var(--primary);
        }
        
        .detail-section h3 {
            margin-top: 0;
            color: var(--text);
            font-size: 16px;
            font-weight: 600;
        }
        
        .detail-item {
            margin-bottom: 16px;
            padding-bottom: 16px;
            border-bottom: 1px solid #eee;
        }
        
        .detail-item:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }
        
        .detail-label {
            font-size: 12px;
            color: var(--muted);
            text-transform: uppercase;
            font-weight: 600;
            margin-bottom: 4px;
        }
        
        .detail-value {
            font-size: 15px;
            color: #333;
            font-weight: 500;
        }
        
        /* status and button styles are centralized in public/assets/css/app.css */
        
        .actions {
            display: flex;
            gap: 12px;
            margin-top: 24px;
            flex-wrap: wrap;
        }
        
        .actions button,
        .actions a {
            flex: 1;
            min-width: 100px;
            padding: 10px 12px;
            font-size: 13px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            text-align: center;
        }
        
        .btn-back {
            background: #F5F5F5;
            color: #333;
            border: 1px solid #ddd;
        }
        
        .btn-back:hover {
            background: #E8E8E8;
            border-color: #999;
            transform: translateY(-2px);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }
        
        .btn-edit {
            background: #FFD8B8;
            color: #D27600;
        }

        .btn-edit:hover {
            background: #FFCCA3;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(210, 118, 0, 0.2);
        }
        
        .btn-delete {
            background: #FFCCCC;
            color: #C62828;
            padding: 10px 12px;
            font-size: 13px;
            min-width: 100px;
        }
        
        .btn-delete:hover {
            background: #FFADAD;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(198, 40, 40, 0.2);
        }

        .aide-meta {
            font-size: 13px;
            color: #666;
            margin-bottom: 6px;
        }

        .badge-dispo {
            display: inline-block;
            margin-top: 8px;
            padding: 4px 10px;
            border-radius: 999px;
            font-size: 12px;
            font-weight: 600;
        }

        .badge-dispo--ok {
            background: #C8E6C9;
            color: #1B5E20;
        }

        .badge-dispo--ko {
            background: #FFCCCC;
            color: #C62828;
        }

        /* small button helpers moved to global stylesheet */
    </style>
{% endblock %}

{% block body %}

{% set navigation = [
    { path: '/demandes', name: 'Mes demandes', icon: 'üìã' },
    { path: '/demande/aide', name: 'Cr√©er une demande d\'aide', icon: '‚ûï' }
] %}

<div class="portal">
    {% include 'side_bar.html.twig' %}

    <main class="portal__main">
        <div class="portal__top">
            <div>
                <h1 class="portal__title">D√©tails de la demande</h1>
                <p class="portal__subtitle">Consultation et suivi de votre demande d'aide</p>
            </div>
        </div>

        <div class="box" style="max-width: 900px; margin: 0 auto;">
            <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 24px;">
                <div>
                    <h2 style="margin: 0 0 12px 0;">{{ demande.titreD }}</h2>
                    <span class="status-badge status--{{ demande.typeDemande|lower }}">{{ demande.typeDemande }}</span>
                </div>
                <div style="text-align: right;">
                    <h3 style="margin: 0 0 8px 0;">Statut</h3>
                    {% set statusClass = {
                        'ACCEPT√âE': 'accepted',
                        'EN_ATTENTE': 'en_attente',
                        'REFUS√âE': 'refused'
                    }[demande.statut] ?? demande.statut|lower|replace({'_': '_'}) %}
                    <span class="status-badge status--{{ statusClass }}">{{ demande.statut|replace({'_': ' '}) }}</span>
                </div>
            </div>

            <div class="details-grid">
                <div class="detail-section">
                    <h3>üìã Informations g√©n√©rales</h3>
                    <div class="detail-item">
                        <div class="detail-label">Titre de la demande</div>
                        <div class="detail-value">{{ demande.titreD }}</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Description du besoin</div>
                        <div class="detail-value">{{ demande.descriptionBesoin }}</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Type de patient</div>
                        <div class="detail-value">{{ demande.typePatient|replace({'_': ' '}) }}</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Sexe de l'aide soignant</div>
                        <div class="detail-value">
                            {% if demande.sexe == 'M' %}
                                Homme
                            {% elseif demande.sexe == 'F' %}
                                Femme
                            {% else %}
                                Peu importe
                            {% endif %}
                        </div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Budget maximum</div>
                        <div class="detail-value">{{ demande.budgetMax }} DT</div>
                    </div>
                </div>

                <div class="detail-section">
                    <h3>üìÖ Dates et dur√©es</h3>
                    <div class="detail-item">
                        <div class="detail-label">Cr√©√©e le</div>
                        <div class="detail-value">{{ demande.dateCreation ? demande.dateCreation|date('d/m/Y √† H:i') : 'N/A' }}</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">D√©but souhait√©e</div>
                        <div class="detail-value">{{ demande.dateDebutSouhaitee ? demande.dateDebutSouhaitee|date('d/m/Y √† H:i') : 'N/A' }}</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Fin souhait√©e</div>
                        <div class="detail-value">{{ demande.dateFinSouhaitee ? demande.dateFinSouhaitee|date('d/m/Y √† H:i') : 'Non d√©finie' }}</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Aide certifi√©e requise</div>
                        <div class="detail-value">
                            {% if demande.besoinCertifie %}
                                ‚úÖ Oui
                            {% else %}
                                ‚ùå Non
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            {% if demande.lieu or (demande.latitude and demande.longitude) %}
                <div style="margin-bottom: 24px;">
                    <h3 style="margin-top: 0;">üìç Localisation</h3>
                    {% if demande.lieu %}
                        <p><strong>Lieu:</strong> {{ demande.lieu }}</p>
                    {% endif %}
                    <div id="map"></div>
                    <p style="font-size: 13px; color: #999; margin-top: 8px;">
                        Latitude: {{ demande.latitude|number_format(6) }}, Longitude: {{ demande.longitude|number_format(6) }}
                    </p>
                </div>
            {% endif %}

            <div class="detail-section" style="margin-bottom: 24px; border-left-color: #4CAF50;">
                <h3>üë©‚Äç‚öïÔ∏è Aides-soignants compatibles</h3>
                {% if aidesSoignantsCompatibles is empty %}
                    <p style="margin: 8px 0 0; color: #666;">Aucun aide-soignant compatible trouv√© pour le moment.</p>
                {% else %}
                    <div class="aides-grid">
                        {% for aide in aidesSoignantsCompatibles %}
                            <div class="aide-card">
                                <h4>{{ aide.nom }} {{ aide.prenom }}</h4>
                                <div class="aide-meta">üìß {{ aide.email }}</div>
                                <div class="aide-meta">üì± {{ aide.telephone ?? 'Non renseign√©' }}</div>
                                <div class="aide-meta">‚öß Sexe: {{ aide.sexe }}</div>
                                <div class="aide-meta">üìç {{ aide.villeIntervention }} ({{ aide.rayonInterventionKm }} km)</div>
                                <div class="aide-meta">üßë‚Äçü¶≥ Patients: {{ aide.typePatientsAcceptes }}</div>
                                <div class="aide-meta">üí∞ Tarif min: {{ aide.tarifMin }} DT</div>
                                <div class="aide-meta">‚≠ê Exp√©rience: {{ aide.niveauExperience ?? 0 }}</div>
                                <span class="badge-dispo {{ aide.disponible ? 'badge-dispo--ok' : 'badge-dispo--ko' }}">
                                    {{ aide.disponible ? 'Disponible' : 'Indisponible' }}
                                </span>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            {% if demande.aideChoisie %}
            <div class="detail-section" style="margin-bottom: 24px; border-left-color: #2E7D32;">
                <h3>‚úì Aide-soignant s√©lectionn√©</h3>
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 16px; padding: 12px 0;">
                    <div class="detail-item">
                        <div class="detail-label">Nom</div>
                        <div class="detail-value">{{ demande.aideChoisie.nom|capitalize }} {{ demande.aideChoisie.prenom|capitalize }}</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Sexe</div>
                        <div class="detail-value">
                            {% if demande.aideChoisie.Sexe == 'HOMME' %}
                                Homme
                            {% else %}
                                Femme
                            {% endif %}
                        </div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Exp√©rience</div>
                        <div class="detail-value">{{ demande.aideChoisie.niveauExperience }} ans</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Localisation</div>
                        <div class="detail-value">{{ demande.aideChoisie.villeIntervention }}</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Rayon</div>
                        <div class="detail-value">{{ demande.aideChoisie.rayonInterventionKm }} km</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Disponibilit√©</div>
                        <div class="detail-value">
                            {% if demande.aideChoisie.disponible %}
                                ‚úì Disponible
                            {% else %}
                                ‚úó Non disponible
                            {% endif %}
                        </div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Email</div>
                        <div class="detail-value"><a href="mailto:{{ demande.aideChoisie.email }}" style="color: var(--primary); text-decoration: none;">{{ demande.aideChoisie.email }}</a></div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">T√©l√©phone</div>
                        <div class="detail-value"><a href="tel:{{ demande.aideChoisie.telephone }}" style="color: var(--primary); text-decoration: none;">{{ demande.aideChoisie.telephone }}</a></div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Types de patients</div>
                        <div class="detail-value">{{ demande.aideChoisie.typePatientsAcceptes }}</div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Tarif minimum</div>
                        <div class="detail-value">{{ demande.aideChoisie.tarifMin }} DT/h</div>
                    </div>
                </div>
            </div>
            {% endif %}

            <div class="actions">
                <a href="{{ path('app_demandes_index') }}" class="btn-back">‚Üê Retour</a>
                {% if demande.statut == 'EN_ATTENTE' %}
                    <a href="{{ path('app_demande_aide_edit', {id: demande.id}) }}" class="btn-edit">‚úèÔ∏è Modifier</a>
                {% endif %}
                <form method="POST" action="{{ path('app_demande_aide_delete', {id: demande.id}) }}" onsubmit="return confirm('√ätes-vous s√ªr de vouloir annuler cette demande ?');" style="margin-left: auto;">
                    <button type="submit" class="btn-delete">‚ùå Annuler</button>
                </form>
            </div>
        </div>
    </main>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/leaflet.min.js"></script>
{% if demande.lieu or (demande.latitude and demande.longitude) %}
<script>
    // Initialiser la carte
    const map = L.map('map').setView([{{ demande.latitude }}, {{ demande.longitude }}], 15);
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '¬© OpenStreetMap',
        maxZoom: 19
    }).addTo(map);

    // Ajouter le marker
    L.marker([{{ demande.latitude }}, {{ demande.longitude }}]).addTo(map)
        .bindPopup('<b>{{ demande.lieu ?? 'Demande d\'aide' }}</b>');
</script>
{% endif %}

{% endblock %}
