                    </tr>
                </thead>
                <tbody>
                    {% if demandes|length > 0 %}
                        {% for demande in demandes %}
                            <tr>
                                <td>
                                    <strong>{{ demande.titreD|truncate(30) }}</strong>
                                </td>
                                <td>{{ demande.email }}</td>
                                <td>
                                    <span class="badge bg-{{ demande.statut === 'EN_ATTENTE' ? 'warning' : demande.statut === 'ACCEPTÃ‰E' ? 'success' : 'danger' }}">
                                        {{ demande.statut }}
                                    </span>
                                </td>
                                <td>{{ demande.dateDebutSouhaitee ? demande.dateDebutSouhaitee|date('d/m/Y') : '-' }}</td>
                                <td>{{ demande.budgetMax ? demande.budgetMax ~ ' DT' : '-' }}</td>
                                <td>
                                    <a href="{{ path('admin_demandes_show', {id: demande.id}) }}" class="btn btn-sm btn-info" title="Voir">ğŸ‘ï¸</a>
