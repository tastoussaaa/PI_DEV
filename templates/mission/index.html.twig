{% extends 'base.html.twig' %}

{% block title %}Mes Missions{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/medecin/dashboard.css') }}">
    <style>
        .cards__grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 32px;
            padding: 0;
        }

        @media (max-width: 1200px) {
            .cards__grid {
                grid-template-columns: 1fr;
                gap: 24px;
            }
        }

        .card {
            position: relative;
            padding: 24px;
            background: white;
            border-radius: 12px;
            border: 1px solid #eee;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
        }

        .card:hover {
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
            transform: translateY(-2px);
        }

        .card h3 {
            margin: 0 0 12px 0;
            font-size: 18px;
            color: #333;
            font-weight: 600;
        }

        .card p {
            margin: 12px 0;
            color: #666;
            line-height: 1.6;
            flex-grow: 1;
        }

        .card__actions {
            display: flex;
            gap: 12px;
            margin-top: auto;
            padding-top: 16px;
        }

        .card__actions button,
        .card__actions a {
            flex: 1;
            padding: 12px 16px;
            font-size: 14px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            text-align: center;
        }

        .btn--info {
            background: #B3E5FC;
            color: #01579B;
            border: none;
        }

        .btn--info:hover {
            background: #81D4FA;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(3, 155, 229, 0.2);
        }

        .btn--success {
            background: #C8E6C9;
            color: #2E7D32;
            border: none;
        }

        .btn--success:hover {
            background: #A5D6A7;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(46, 125, 50, 0.2);
        }

        .btn--warning {
            background: #FFF9C4;
            color: #F57F17;
            border: none;
        }

        .btn--warning:hover {
            background: #FFF59D;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(245, 127, 23, 0.2);
        }

        .btn--danger {
            background: #FFCCCC;
            color: #C62828;
            border: none;
        }

        .btn--danger:hover {
            background: #FFADAD;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(198, 40, 40, 0.2);
        }

        .card__status {
            display: inline-block;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            margin-top: 12px;
        }

        .status--urgent {
            background: #FFE0B2;
            color: #E65100;
            border: 1px solid rgba(230, 81, 0, 0.15);
        }

        .status--normal {
            background: #C8E6C9;
            color: #1B5E20;
            border: 1px solid rgba(27, 94, 32, 0.15);
        }

        .status--economie {
            background: #E1BEE7;
            color: #6A1B9A;
            border: 1px solid rgba(106, 27, 154, 0.15);
        }

        .status--pending {
            background: #FFF9C4;
            color: #F57F17;
            border: 1px solid rgba(245, 127, 23, 0.15);
        }

        .status--accepted {
            background: #C8E6C9;
            color: #2E7D32;
            border: 1px solid rgba(46, 125, 50, 0.15);
        }

        .status--refused {
            background: #FFCCCC;
            color: #D32F2F;
            border: 1px solid rgba(211, 47, 47, 0.15);
        }

        .card__info {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 12px;
            margin-top: 12px;
            padding-top: 12px;
            border-top: 1px solid #eee;
            font-size: 13px;
            color: #666;
        }

        .card__info strong {
            color: #333;
        }
    </style>
{% endblock %}

{% block body %}

<div class="portal">
    {% include 'side_bar.html.twig' %}

    <main class="portal__main">
        <div class="portal__top">
            <div>
                <h1 class="portal__title">Mes Missions</h1>
                <p class="portal__subtitle">Consultez et g√©rez vos missions d'aide √† domicile</p>
            </div>
        </div>

        {% if missions is empty %}
            <div class="box">
                <p style="text-align: center; color: var(--muted);">Aucune mission disponible pour le moment.</p>
            </div>
        {% else %}
            <div class="cards">
                <div class="cards__grid">
                    {% for mission in missions %}
                        <div class="card">
                            <div style="display: flex; justify-content: space-between; align-items: start; gap: 12px;">
                                <div>
                                    <h3 style="margin: 0 0 12px 0;">#{{ mission.demandeAide.id }}</h3>
                                    <span class="card__status status--{{ mission.demandeAide.typeDemande|lower }}">{{ mission.demandeAide.typeDemande }}</span>
                                </div>
                                <span class="card__status status--{{ mission.statutMission|lower }}">{{ mission.statutMission }}</span>
                            </div>

                            <p style="margin: 12px 0; color: #666; line-height: 1.5;">{{ mission.demandeAide.descriptionBesoin|length > 120 ? mission.demandeAide.descriptionBesoin|slice(0, 120) ~ '‚Ä¶' : mission.demandeAide.descriptionBesoin }}</p>

                            <div class="card__info">
                                <div>
                                    <strong>Type de patient:</strong><br>{{ mission.demandeAide.typePatient|replace({'_': ' '}) }}
                                </div>
                                <div>
                                    <strong>Budget max:</strong><br>{{ mission.demandeAide.budgetMax }} DT
                                </div>
                                <div>
                                    <strong>Prix final:</strong><br>{{ mission.prixFinal }} DT
                                </div>
                                <div>
                                    <strong>Cr√©√©e:</strong><br>{{ mission.demandeAide.dateCreation ? mission.demandeAide.dateCreation|date('d/m/Y H:i') : 'N/A' }}
                                </div>
                            </div>

                            <div class="card__actions">
                                <a href="{{ path('aidesoingnant_missions_details', {'id': mission.demandeAide.id}) }}" class="btn btn--info">üëÅÔ∏è Voir d√©tails</a>
                                {% if mission.statutMission == 'EN_ATTENTE' %}
                                    <a href="{{ path('aidesoingnant_missions_accept', {'id': mission.demandeAide.id}) }}" class="btn btn--success">‚úÖ Accepter</a>
                                    <button class="btn btn--warning" onclick="openPriceModal({{ mission.demandeAide.id }}, {{ mission.demandeAide.budgetMax }})">üí∞ Prix propos√©</button>
                                    <a href="{{ path('aidesoingnant_missions_refuse', {'id': mission.demandeAide.id}) }}" class="btn btn--danger">‚ùå Refuser</a>
                                {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    </main>
</div>

<!-- Price Proposal Modal -->
<div id="priceModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Proposer un prix</h3>
            <span class="close" onclick="closePriceModal()">&times;</span>
        </div>

        <div id="alertContainer" class="alert" style="display: none;"></div>

        <form id="priceForm">
            <div class="form-group">
                <label for="proposedPrice">Prix propos√© (DT)</label>
                <input type="number" id="proposedPrice" name="proposedPrice" min="0" step="0.01" required>
                <small style="color: #666; font-size: 12px;">Le prix doit √™tre positif et inf√©rieur ou √©gal au budget maximum + 50 DT.</small>
            </div>

            <div class="modal-actions">
                <button type="button" class="btn-modal btn-modal--secondary" onclick="closePriceModal()">Annuler</button>
                <button type="submit" class="btn-modal btn-modal--primary">Proposer</button>
            </div>
        </form>
    </div>
</div>

<style>
    /* Modal styles */
    .modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
        background-color: white;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 90%;
        max-width: 400px;
        border-radius: 8px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .modal-header h3 {
        margin: 0;
        color: #333;
    }

    .close {
        color: #aaa;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
    }

    .close:hover {
        color: #000;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        margin-bottom: 5px;
        font-weight: 600;
        color: #333;
    }

    .form-group input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 14px;
    }

    .form-group input:focus {
        outline: none;
        border-color: #007bff;
    }

    .modal-actions {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
    }

    .btn-modal {
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-weight: 600;
    }

    .btn-modal--primary {
        background: #007bff;
        color: white;
    }

    .btn-modal--primary:hover {
        background: #0056b3;
    }

    .btn-modal--secondary {
        background: #6c757d;
        color: white;
    }

    .btn-modal--secondary:hover {
        background: #545b62;
    }

    .alert {
        padding: 10px;
        margin-bottom: 15px;
        border-radius: 4px;
        display: none;
    }

    .alert--success {
        background: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert--error {
        background: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
</style>

<script>
    // Price proposal modal functions
    let currentDemandeId = null;
    let maxBudget = 0;

    function openPriceModal(demandeId, budgetMax) {
        currentDemandeId = demandeId;
        maxBudget = budgetMax;

        document.getElementById('proposedPrice').value = budgetMax;
        document.getElementById('proposedPrice').max = budgetMax + 50;
        document.getElementById('priceModal').style.display = 'block';
        document.getElementById('alertContainer').style.display = 'none';

        // Focus on input
        setTimeout(() => {
            document.getElementById('proposedPrice').focus();
        }, 100);
    }

    function closePriceModal() {
        document.getElementById('priceModal').style.display = 'none';
        document.getElementById('priceForm').reset();
        currentDemandeId = null;
        maxBudget = 0;
    }

    document.getElementById('priceForm').addEventListener('submit', function(e) {
        e.preventDefault();

        const proposedPrice = parseFloat(document.getElementById('proposedPrice').value);
        const alertContainer = document.getElementById('alertContainer');

        // Validation
        if (isNaN(proposedPrice) || proposedPrice <= 0) {
            showAlert('Le prix doit √™tre un nombre positif.', 'error');
            return;
        }

        if (proposedPrice > maxBudget + 50) {
            showAlert('Le prix propos√© doit √™tre inf√©rieur ou √©gal au budget maximum + 50 DT.', 'error');
            return;
        }

        // Send AJAX request
        fetch('/aidesoingnant/missions/propose-price/' + currentDemandeId, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: JSON.stringify({
                proposedPrice: proposedPrice
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                showAlert('Prix propos√© avec succ√®s!', 'success');
                setTimeout(() => {
                    closePriceModal();
                    location.reload(); // Refresh to show updated price
                }, 1500);
            } else {
                showAlert(data.message || 'Erreur lors de la proposition du prix.', 'error');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showAlert('Erreur lors de la communication avec le serveur.', 'error');
        });
    });

    function showAlert(message, type) {
        const alertContainer = document.getElementById('alertContainer');
        alertContainer.textContent = message;
        alertContainer.className = 'alert alert--' + type;
        alertContainer.style.display = 'block';
    }

    // Close modal when clicking outside
    window.onclick = function(event) {
        const modal = document.getElementById('priceModal');
        if (event.target == modal) {
            closePriceModal();
        }
    }
</script>
{% endblock %}
