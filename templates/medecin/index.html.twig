{% extends 'base.html.twig' %}

{% block title %}medecin – Consultations{% endblock %}

{% block body %}
<h1>Consultations (medecin)</h1>

<table border="1" cellpadding="5">
    <thead>
        <tr>
            <th>Date</th>
            <th>Motif</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for consultation in consultations %}
            <tr>
                <td>{{ consultation.dateConsultation|date('Y-m-d H:i') }}</td>
                <td>{{ consultation.motif }}</td>

                <td>
                    {% if consultation.status == 'pending' %}
                        ⏳ Pending
                    {% elseif consultation.status == 'accepted' %}
                        ✅ Accepted
                    {% else %}
                        ❌ Declined
                    {% endif %}
                </td>

                <td>
                    <a href="{{ path('consultation_show', {id: consultation.id}) }}">Show</a>

                    {% if consultation.status == 'pending' %}
                        |
                        <form method="post"
                              action="{{ path('consultation_accept', {id: consultation.id}) }}"
                              style="display:inline">
                            <button type="submit">Accept</button>
                        </form>

                        <form method="post"
                              action="{{ path('consultation_decline', {id: consultation.id}) }}"
                              style="display:inline">
                            <button type="submit">Decline</button>
                        </form>
                    {% endif %}

                    |
                    <form method="post"
                          action="{{ path('consultation_delete', {id: consultation.id}) }}"
                          style="display:inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ consultation.id) }}">
                        <button type="submit"
                                onclick="return confirm('Delete this consultation?')">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No consultations found.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}