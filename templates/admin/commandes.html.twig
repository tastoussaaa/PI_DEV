{% extends 'base.html.twig' %}

{% block title %}Gestion des Commandes - Admin{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/medecin/dashboard.css') }}">
    <style>
        /* Filter Styles */
        .filter-section {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            border-radius: 12px;
            padding: 24px;
            margin-bottom: 24px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
        }

        .filter-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 16px;
            align-items: flex-end;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 6px;
        }

        .form-group label {
            font-size: 13px;
            font-weight: 600;
            color: #1f2937;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .form-group input,
        .form-group select {
            padding: 10px 12px;
            border: 1px solid #d1d5db;
            border-radius: 8px;
            font-size: 14px;
            background-color: white;
            transition: all 0.3s ease;
        }

        .form-group input:focus,
        .form-group select:focus {
            outline: none;
            border-color: #13B8C2;
            box-shadow: 0 0 0 3px rgba(19, 184, 194, 0.1);
        }

        .filter-button {
            padding: 10px 24px;
            background: linear-gradient(135deg, #13B8C2 0%, #0d9ba6 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(19, 184, 194, 0.3);
        }

        .filter-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(19, 184, 194, 0.4);
        }

        /* Table Styles */
        .table-wrap { 
            overflow-x: auto; 
            border-radius: 12px; 
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07); 
        }
        
        table { 
            width:100%; 
            border-collapse: collapse; 
            background: white; 
        }
        
        th, td { 
            padding:14px 16px; 
            text-align:left; 
            border-bottom:1px solid #e5e7eb; 
        }
        
        th { 
            font-weight:700; 
            color:#fff;
            background: linear-gradient(135deg, #13B8C2 0%, #0d9ba6 100%);
            text-transform: uppercase;
            font-size: 12px;
            letter-spacing: 0.5px;
        }
        
        tbody tr:hover { 
            background-color: #f9fafb; 
            transition: background-color 0.2s ease; 
        }
        
        .btn-sm { 
            padding:8px 14px; 
            font-size:12px; 
            border-radius:6px; 
            text-decoration:none; 
            display:inline-block; 
            font-weight: 500; 
            border: none;
            cursor: pointer;
            transition: all 0.2s ease;
        }
        
        .btn-success { 
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: white;
        }

        .btn-success:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(16, 185, 129, 0.3);
        }

        .btn-danger { 
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            color: white;
        }

        .btn-danger:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(239, 68, 68, 0.3);
        }

        .btn-ghost { 
            background:transparent; 
            color:#13B8C2; 
            border:1.5px solid #13B8C2; 
        }
        
        .btn-ghost:hover { 
            background: #f0fcfd;
        }

        .status-badge {
            display: inline-block;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            text-transform: capitalize;
        }

        .status-en_attente {
            background: #fef3c7;
            color: #92400e;
        }

        .status-confirm√©e {
            background: #d1fae5;
            color: #065f46;
        }

        .status-livr√©e {
            background: #dbeafe;
            color: #1e40af;
        }

        .status-annul√©e {
            background: #fee2e2;
            color: #991b1b;
        }

        .portal {
            display: flex;
        }

        .portal__main {
            flex: 1;
            padding: 24px;
        }

        .portal__top {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 32px;
        }

        .portal__title {
            font-size: 28px;
            font-weight: 700;
            margin: 0;
            color: #1f2937;
        }

        .portal__subtitle {
            font-size: 14px;
            color: #6b7280;
            margin: 8px 0 0;
        }

        .box {
            background: white;
            border-radius: 12px;
            padding: 0;
            overflow: hidden;
        }

        .actions-cell {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
        }

        .actions-cell form {
            display: inline;
        }

        .demandeur-info {
            font-size: 13px;
        }

        .demandeur-name {
            font-weight: 600;
            color: #1f2937;
        }

        .demandeur-type {
            color: #6b7280;
            font-size: 11px;
        }

        /* Modal */
        .modal-backdrop { 
            position:fixed; 
            inset:0; 
            background:rgba(0,0,0,0.45); 
            display:none; 
            align-items:center; 
            justify-content:center; 
            z-index:50; 
        }
        
        .modal { 
            background:#fff; 
            border-radius:12px; 
            max-width:480px; 
            width:100%; 
            padding:24px; 
            box-shadow:0 20px 25px rgba(0,0,0,.15); 
        }
        
        .modal__title { 
            font-size:18px; 
            font-weight:700; 
            margin:0 0 8px; 
            color: #1f2937; 
        }
        
        .modal__body { 
            margin-bottom:16px; 
            color:#6b7280; 
            line-height: 1.5; 
        }
        
        .modal__actions { 
            display:flex; 
            gap:12px; 
            justify-content:flex-end; 
        }
    </style>
{% endblock %}

{% block body %}
<div class="portal">
    {% include 'side_bar.html.twig' %}
    <main class="portal__main">
        <div class="portal__top">
            <div>
                <h1 class="portal__title">Gestion des Commandes</h1>
                <p class="portal__subtitle">Liste de toutes les commandes en attente de validation</p>
            </div>
        </div>

        <!-- Filter Form -->
        <form method="get" action="{{ path('admin_commandes') }}" class="filter-section">
            <div class="filter-container">
                <div class="form-group">
                    <label for="recherche">üîç Recherche</label>
                    <input type="text" id="recherche" name="recherche" value="{{ recherche }}" placeholder="Produit ou client...">
                </div>
                <div class="form-group">
                    <label for="statut">üìä Statut</label>
                    <select id="statut" name="statut">
                        <option value="">Tous les statuts</option>
                        {% for s in statuts %}
                            <option value="{{ s }}" {% if statut_filtre == s %}selected{% endif %}>
                                {% if s == 'en_attente' %}En attente
                                {% elseif s == 'confirm√©e' %}Confirm√©e
                                {% elseif s == 'livr√©e' %}Livr√©e
                                {% elseif s == 'annul√©e' %}Annul√©e
                                {% else %}{{ s }}{% endif %}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label for="tri">‚ÜîÔ∏è Trier par</label>
                    <select id="tri" name="tri">
                        <option value="dateCommande" {% if tri == 'dateCommande' %}selected{% endif %}>Date</option>
                        <option value="montantTotal" {% if tri == 'montantTotal' %}selected{% endif %}>Montant</option>
                        <option value="statut" {% if tri == 'statut' %}selected{% endif %}>Statut</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="ordre">üìà Ordre</label>
                    <select id="ordre" name="ordre">
                        <option value="ASC" {% if ordre == 'ASC' %}selected{% endif %}>Croissant</option>
                        <option value="DESC" {% if ordre == 'DESC' %}selected{% endif %}>D√©croissant</option>
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" class="filter-button">üîé Filtrer</button>
                </div>
            </div>
        </form>

        <!-- Table -->
        <div class="box">
            <div class="table-wrap">
                <table>
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Client</th>
                            <th>Produit</th>
                            <th>Quantit√©</th>
                            <th>Montant</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for c in commandes %}
                            <tr>
                                <td>{{ c.dateCommande ? c.dateCommande|date('d/m/Y H:i') : '-' }}</td>
                                <td>
                                    <div class="demandeur-info">
                                        <div class="demandeur-name">{{ c.demandeur ? c.demandeur.fullName : 'Inconnu' }}</div>
                                        {% if c.demandeur %}
                                            <div class="demandeur-type">{{ c.demandeur.userType ?? '-' }}</div>
                                        {% endif %}
                                    </div>
                                </td>
                                <td>{{ c.produit ? c.produit.nom : '-' }}</td>
                                <td>{{ c.quantite }}</td>
                                <td>{{ (c.montantTotal ?? (c.produit ? c.produit.prix * c.quantite : 0))|number_format(2, ',', ' ') }} dt</td>
                                <td>
                                    <span class="status-badge status-{{ c.statut }}">
                                        {% if c.statut == 'en_attente' %}‚è≥ En attente
                                        {% elseif c.statut == 'confirm√©e' %}‚úÖ Confirm√©e
                                        {% elseif c.statut == 'livr√©e' %}üì¶ Livr√©e
                                        {% elseif c.statut == 'annul√©e' %}‚ùå Annul√©e
                                        {% else %}{{ c.statut }}{% endif %}
                                    </span>
                                </td>
                                <td>
                                    <div class="actions-cell">
                                        {% if c.statut == 'en_attente' %}
                                            <form action="{{ path('admin_commande_accept', { id: c.id }) }}" method="post">
                                                <input type="hidden" name="_token" value="{{ csrf_token('accept-commande' ~ c.id) }}">
                                                <button type="submit" class="btn-sm btn-success" onclick="return confirm('Confirmer cette commande ?')">‚úì Accepter</button>
                                            </form>
                                            <form action="{{ path('admin_commande_decline', { id: c.id }) }}" method="post">
                                                <input type="hidden" name="_token" value="{{ csrf_token('decline-commande' ~ c.id) }}">
                                                <button type="submit" class="btn-sm btn-danger" onclick="return confirm('Rejeter cette commande ?')">‚úó Rejeter</button>
                                            </form>
                                        {% else %}
                                            <span style="color: #9ca3af; font-size: 12px;">Aucune action</span>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" style="text-align: center; padding: 32px; color: #9ca3af;">
                                    Aucune commande trouv√©e.
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>
{% endblock %}
