{% extends 'base.html.twig' %}

{% block title %}D√©tails de la Formation{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css/medecin/dashboard.css') }}">
<style>
    /* === Premium Formation Details Card === */
    .formation-details {
        background: #ffffff;
        border-radius: 16px;
        padding: 40px;
        max-width: 900px;
        margin: 40px auto;
        box-shadow: 0 20px 50px rgba(0,0,0,0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .formation-details:hover {
        transform: translateY(-4px);
        box-shadow: 0 25px 60px rgba(0,0,0,0.12);
    }

    .formation-details h2 {
        font-size: 2.2rem;
        font-weight: 700;
        margin-bottom: 15px;
        background: linear-gradient(135deg, #1976d2, #115293);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .formation-metadata {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        margin-bottom: 25px;
    }

    .formation-metadata span {
        display: inline-block;
        background: #e3f2fd;
        color: #1976d2;
        padding: 6px 12px;
        border-radius: 12px;
        font-size: 0.95rem;
        font-weight: 500;
    }

    .formation-description {
        font-size: 1rem;
        line-height: 1.8;
        color: #333;
        margin-bottom: 30px;
    }

    .formation-description p {
        margin-bottom: 1rem;
    }

    /* Footer buttons */
    .formation-footer {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .formation-footer .btn {
        font-weight: 600;
        padding: 12px 18px;
        border-radius: 12px;
        transition: all 0.3s ease;
        cursor: pointer;
        text-align: center;
    }

    .btn--primary {
        background: #1976d2;
        color: #fff;
    }

    .btn--primary:hover {
        background: #115293;
    }

    .btn--secondary {
        background: #e0e0e0;
        color: #555;
        cursor: not-allowed;
    }

    .btn--ghost {
        background: transparent;
        color: #1976d2;
        border: 2px solid #1976d2;
    }

    .btn--ghost:hover {
        background: #1976d2;
        color: #fff;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .formation-details {
            padding: 25px;
        }

        .formation-metadata {
            flex-direction: column;
        }
    }
</style>
{% endblock %}

{% block body %}
{% set navigation = [
    {'name': 'Dashboard', 'path': path('app_aide_soignant_dashboard'), 'icon': 'üè†'},
    {'name': 'Formations', 'path': path('aidesoingnant_formation'), 'icon': 'üìö'}
] %}

<div class="portal">

    <!-- SIDEBAR -->
    <aside class="portal__side">
        <a href="#" class="portal__brand">
            <img src="{{ asset('assets/images/logo_mini.png') }}" class="portal__logo" alt="">
            <div>
                <div class="portal__name">Aidora</div>
                <div class="portal__tag">Espace Aide Soignant</div>
            </div>
        </a>

        <div class="portal__hello">
            <div class="portal__avatar">
                <img src="{{ asset('assets/images/avatar.png') }}" class="portal__logo" alt="">
            </div>
            <div>
                <div class="portal__hi">Bienvenue</div>
                <div class="portal__mail">{{ app.user.name ?? 'Aide Soignant' }}</div>
            </div>
        </div>

        <nav class="portal__menu">
            {% for item in navigation %}
                <a href="{{ item.path }}" 
                   class="portal__item {% if app.request.pathinfo == item.path %}is-active{% endif %}">
                    <span class="portal__icon">{{ item.icon }}</span>
                    <span>{{ item.name }}</span>
                </a>
            {% endfor %}
        </nav>

        <div class="portal__bottom">
            <a href="#" class="portal__logout">D√©connexion</a>
        </div>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="portal__main">
        <div class="portal__content">
            <div class="formation-details">
                <h2>{{ formation.title }}</h2>

                <div class="formation-metadata">
                    <span>Cat√©gorie: {{ formation.category }}</span>
                    <span>Date de d√©but: {{ formation.startDate ? formation.startDate|date('d/m/Y H:i') : '-' }}</span>
                    <span>Date de fin: {{ formation.endDate ? formation.endDate|date('d/m/Y H:i') : '-' }}</span>
                </div>

                <div class="formation-description">
                    {{ formation.description|raw }}
                </div>

                <div class="formation-footer">
                    {% set hasApplied = appliedFormations[formation.id] is defined %}

                    {% if hasApplied %}
                        <button class="btn btn--secondary" disabled>
                            ‚úì Candidature envoy√©e
                        </button>
                    {% else %}
                        <form method="post" 
                              action="{{ path('aidesoingnant_apply_formation', {'id': formation.id}) }}">
                            <button type="submit" class="btn btn--primary">
                                ‚úâÔ∏è Postuler √† cette formation
                            </button>
                        </form>
                    {% endif %}
                </div>

                <div style="margin-top:20px;">
                    <a href="{{ path('aidesoingnant_formation') }}" class="btn btn--ghost">
                        ‚Üê Retour √† la liste des formations
                    </a>
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}