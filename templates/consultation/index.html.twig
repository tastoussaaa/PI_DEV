{% extends 'base.html.twig' %}

{% block title %}Consultations{% endblock %}

{% block body %}
<h1>All Consultations</h1>

<a href="{{ path('consultation_new') }}">Create New Consultation</a>

<table border="1" cellpadding="5">
    <thead>
        <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Motif</th>
            <th>Diagnostic</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for consultation in consultations %}
            <tr>
                <td>{{ consultation.id }}</td>
                <td>{{ consultation.dateConsultation ? consultation.dateConsultation|date('Y-m-d H:i') : '' }}</td>
                <td>{{ consultation.motif }}</td>
                <td>{{ consultation.diagnostic }}</td>
                <td>{{ consultation.status }}</td>
                <td>
                    <a href="{{ path('consultation_show', {id: consultation.id}) }}">Show</a> |
                    <a href="{{ path('consultation_edit', {id: consultation.id}) }}">Edit</a> |
                    <form action="{{ path('consultation_delete', {id: consultation.id}) }}" method="post" style="display:inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ consultation.id) }}">
                        <button type="submit" onclick="return confirm('Delete this consultation?')">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No consultations yet.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}